    MKVSettingsRight:
        id: right_settings
        size_hint_y: 1

        MKVSettingsPanel:
            name: "appearance"
            title: "Appearance"
            icon: "palette"
            order: 0

            MKVSettingBooleanItem:
                key: "dark_mode"
                title: "Enable dark mode"
                value: False

            MKVSettingStringItem:
                key: "font_family"
                title: "Font family"
                value: "Roboto"

        MKVSettingsPanel:
            name: "storage"
            title: "Storage"
            icon: "database"
            order: 1

            MKVSettingPathItem:
                key: "export_dir"
                title: "Export directory"
                path_mode: "dir"
                value: "/home/user/exports"
                must_exist: False

            MKVSettingBooleanItem:
                key: "cleanup"
                title: "Cleanup on exit"
                value: True
