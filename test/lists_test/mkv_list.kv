#:kivy 2.3.0
#:import dp kivy.metrics.dp

<Root@MDBoxLayout>:
    orientation: "vertical"
    spacing: 0
#    md_bg_color: app.theme_cls.onBackgroundColor
    md_bg_color: app.theme_cls.backgroundColor

    MDScrollView:
        MKVList:
            cols: 1
            adaptive_height: True
            padding: [dp(8), dp(8), dp(8), dp(8)]
            spacing: dp(4)

            # 1) Single-line item
            MKVListItem:
#                density: 0
                use_divider: True
                MKVListItemLeadingIcon:
                    icon: "account"
                MKVListItemHeadlineText:
                    text: "Single-line item"
                MKVListItemTrailingIcon:
                    icon: "chevron-right"

            # 2) Two-line item (checkbox trailing)
            MKVListItem:
#                density: 1
                use_divider: True
                MKVListItemLeadingIcon:
                    icon: "email"
                MKVListItemHeadlineText:
                    text: "Two-line item"
                MKVListItemSupportingText:
                    text: "Supporting text goes here"
                MKVListItemTrailingCheckbox:
                    active: True

            # 3) Three-line item (icon trailing)
            MKVListItem:
#                density: 2
                use_divider: True
                MKVListItemLeadingIcon:
                    icon: "map"
                MKVListItemHeadlineText:
                    text: "Three-line item"
                MKVListItemSupportingText:
                    text: "Supporting line"
                MKVListItemTertiaryText:
                    text: "Tertiary (small) hint"
                    opacity: 0.8
                MKVListItemTrailingIcon:
                    icon: "dots-vertical"

            # 4) Disabled item
            MKVListItem:
#                density: 0
                use_divider: True
                disabled: True
                MKVListItemLeadingIcon:
                    icon: "alert"
                MKVListItemHeadlineText:
                    text: "Disabled item"
                MKVListItemSupportingText:
                    text: "Not clickable"
                MKVListItemTrailingCheckbox:
                    active: False

            # 5) Plain headline (no divider)
            MKVListItem:
#                density: 1
                use_divider: False
                MKVListItemHeadlineText:
                    text: "Plain headline"

            # 6) Compact density (icon trailing)
            MKVListItem:
#                density: 1
                use_divider: True
                MKVListItemLeadingIcon:
                    icon: "calendar"
                MKVListItemHeadlineText:
                    text: "Compact density"
                MKVListItemSupportingText:
                    text: "Smaller vertical padding"
                MKVListItemTrailingIcon:
                    icon: "information-outline"

            # 7) Cozy density (checkbox trailing)
            MKVListItem:
#                density: 2
                use_divider: True
                MKVListItemLeadingIcon:
                    icon: "star"
                MKVListItemHeadlineText:
                    text: "Cozy density"
                MKVListItemSupportingText:
                    text: "A bit taller"
                MKVListItemTertiaryText:
                    text: "And tertiary too"
                MKVListItemTrailingCheckbox:
                    active: True

            # 8) Max density (icon trailing)
            MKVListItem:
#                density: 3
                use_divider: True
                MKVListItemLeadingIcon:
                    icon: "account-circle"
                MKVListItemHeadlineText:
                    text: "Max density"
                MKVListItemSupportingText:
                    text: "Tallest variant"
                MKVListItemTertiaryText:
                    text: "For visual check"
                MKVListItemTrailingIcon:
                    icon: "chevron-right"

# Корень сцены
Root:
