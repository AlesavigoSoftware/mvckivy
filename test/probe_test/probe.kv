<Probe>:
    orientation: "vertical"
    padding: "16dp"
    spacing: "12dp"

    Label:
        text: root.fmt_with_arg(root.value)
    Label:
        text: root.fmt_no_arg()
    Label:
        text: root.alias_text

    BoxLayout:
        size_hint_y: None
        height: "48dp"
        spacing: "8dp"
        Button:
            text: "value += 1"
            on_release: root.value += 1
        Button:
            text: "value -= 1"
            on_release: root.value -= 1
        Button:
            text: "Reset counters"
            on_release: root.calls_arg = 0; root.calls_noarg = 0; root.calls_alias = 0

