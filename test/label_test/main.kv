#:kivy 2.3.0
#:import dp kivy.metrics.dp

<Root>:
    orientation: "vertical"
    padding: dp(16)
    spacing: dp(16)
    md_bg_color: app.theme_cls.backgroundColor

    MKVLabel:
        text: "MKVLabel демонстрация"
        font_style: "Title"
        role: "large"
        adaptive_height: True

    MDScrollView:
        do_scroll_x: False

        MDBoxLayout:
            orientation: "vertical"
            adaptive_height: True
            spacing: dp(12)

            MKVLabel:
                text: "Текст с цветом по умолчанию"
                adaptive_height: True

            MKVLabel:
                text: "Пользовательский цвет"
                theme_text_color: "Custom"
                text_color: app.theme_cls.errorColor
                adaptive_height: True

            MKVLabel:
                text: "Размер и шрифт из стилей"
                font_style: "Headline"
                role: "small"
                adaptive_height: True

            MKVLabel:
                id: selectable_label
                text: "Двойное нажатие включает выделение"
                allow_selection: True
                adaptive_height: True
                radius: [12, 12, 12, 12]

            MKVLabel:
                text: "Текст с кастомным размером"
                theme_font_size: "Custom"
                font_size: dp(20)
                theme_line_height: "Custom"
                line_height: 1.4
                adaptive_height: True

            MKVIcon:
                icon: "email"
                font_name: "Icons"

            MKVIcon:
                icon: "home"
                font_name: "Icons"
                icon_color: app.theme_cls.primaryColor

            MKVIcon:
                icon: "https://kivy.org/logos/kivy-icon-256.png"
                theme_icon_color: "Custom"
                icon_color: app.theme_cls.onSurfaceColor
