<Root>
    orientation: "vertical"
    spacing: 0
    md_bg_color: app.theme_cls.backgroundColor

    MDScrollView:
        MKVList:
            use_divider: True

            MKVListItem:
                MKVListItemLeadingIcon:
                    icon: "account"
                MKVListItemHeadlineText:
                    text: "Single-line item"
                MKVListItemTrailingIcon:
                    icon: "chevron-right"

            MKVListItem:
                MKVListItemLeadingIcon:
                    icon: "email"
                MKVListItemHeadlineText:
                    text: "Two-line item"
                MKVListItemSupportingText:
                    text: "Supporting text goes here"
                MKVListItemTrailingCheckbox:
                    active: True

            MKVListItem:
                MKVListItemLeadingIcon:
                    icon: "map"
                MKVListItemHeadlineText:
                    text: "Three-line item"
                MKVListItemSupportingText:
                    text: "Supporting line"
                MKVListItemTertiaryText:
                    text: "Tertiary (small) hint"
                    opacity: 0.8
                MKVListItemTrailingIcon:
                    icon: "dots-vertical"

            MKVListItem:
                disabled: True
                MKVListItemLeadingIcon:
                    icon: "alert"
                MKVListItemHeadlineText:
                    text: "Disabled item"
                MKVListItemSupportingText:
                    text: "Not clickable"
                MKVListItemTrailingCheckbox:
                    active: False

            MKVListItem:
                MKVListItemHeadlineText:
                    text: "Plain headline"

            MKVListItem:
                MKVListItemLeadingIcon:
                    icon: "calendar"
                MKVListItemHeadlineText:
                    text: "Compact density"
                MKVListItemSupportingText:
                    text: "Smaller vertical padding"
                MKVListItemTrailingIcon:
                    icon: "information-outline"

            MKVListItem:
                MKVListItemLeadingIcon:
                    icon: "star"
                MKVListItemHeadlineText:
                    text: "Cozy density"
                MKVListItemSupportingText:
                    text: "A bit taller"
                MKVListItemTertiaryText:
                    text: "And tertiary too"
                MKVListItemTrailingCheckbox:
                    active: True

            MKVListItem:
                MKVListItemLeadingIcon:
                    icon: "account-circle"
                MKVListItemHeadlineText:
                    text: "Max density"
                MKVListItemSupportingText:
                    text: "Tallest variant"
                MKVListItemTertiaryText:
                    text: "For visual check"
                MKVListItemTrailingIcon:
                    icon: "chevron-right"

            MKVListItem:
                density: -2
                MKVListItemLeadingIcon:
                    icon: "account-circle"
                MKVListItemHeadlineText:
                    text: "Switch theme"
                MKVListItemTrailingSwitch:
                    active: False
                    on_active: app.toggle_theme(self.active)

# Корень сцены
Root:
