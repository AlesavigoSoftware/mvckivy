#:import dp kivy.metrics.dp
#:import DampedScrollEffect kivy.effects.dampedscroll.DampedScrollEffect

<MKVTabsBadge>


<MKVTabsCarousel>


<MKVTabsScrollView>
    size_hint: 1, None
    do_scroll_y: False
    bar_width: 0
    effect_cls: DampedScrollEffect


<MKVTabsItemText>
    adaptive_size: True
    pos_hint: {"center_x": .5, "center_y": .5}
    font_style: "Title"
    role: "small"


<MKVTabsItemIcon>
    pos_hint: {"center_x": .5}


<MKVTabsItem>
    orientation: "vertical"
    size_hint: None, None
    spacing: dp(4)
    padding: 0, dp(12), 0, dp(8)


<MKVTabsItemSecondaryContainer>
    orientation: "horizontal"
    size_hint: None, None
    spacing: dp(8)


<MKVTabsItemSecondary>
    size_hint: None, None
    height: dp(48)
    anchor_x: "center"
    anchor_y: "center"


<MKVTabsPrimary>
    orientation: "vertical"
    size_hint_y: None


<MKVTabsSecondary>
