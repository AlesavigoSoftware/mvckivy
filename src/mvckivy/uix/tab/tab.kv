#:import dp kivy.metrics.dp

<MKVTabItem>:
    size_hint: None, None
    width: self.alias_implicit_width
    height: self.alias_height
    orientation: "vertical"
    padding: dp(12), dp(10), dp(12), dp(10)
    spacing: dp(4)
    icon_widget: icon_widget
    text_widget: text_widget

    MDIcon:
        id: icon_widget
        icon: root.display_icon
        adaptive_size: True
        theme_icon_color: "Custom"
        icon_color: root.alias_icon_color

    MDLabel:
        id: text_widget
        text: root.text
        adaptive_size: True
        role: "small"
        halign: "center"
        theme_text_color: "Custom"
        text_color: root.alias_text_color

<MKVBottomTabItem>:
    orientation: "horizontal"
    padding: dp(16), 0, dp(16), 0
    spacing: root.tabs_ref.item_spacing if root.tabs_ref and hasattr(root.tabs_ref, "item_spacing") else dp(8)
