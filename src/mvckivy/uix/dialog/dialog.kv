<MKVBaseDialog>
    orientation: "vertical"
    size_hint_min_x: dp(280)
    size_hint_max_x: dp(560)
    pos_hint: {"center_x": .5, "center_y": .5}
    focus_behavior: False
    adaptive_height: True


<MKVDialog>
    content_stack: content_stack
    icon_container: icon_container
    headline_container: headline_container
    supporting_text_container: supporting_text_container
    content_container: content_container
    button_container: button_container

    MDBoxLayout:
        id: content_stack
        orientation: "vertical"
        adaptive_height: True
        spacing: dp(16)
        padding: dp(24)

        MDAnchorLayout:
            id: icon_container
            anchor_x: "center"
            size_hint_y: None
            height: 0

        MDBoxLayout:
            id: headline_container
            adaptive_height: True

        MDBoxLayout:
            id: supporting_text_container
            adaptive_height: True

        MDBoxLayout:
            id: content_container
            adaptive_height: True

    MDBoxLayout:
        id: button_container
        adaptive_height: True
        padding: dp(24), 0, dp(24), dp(24)


<MKVDialogIcon>
    size_hint: None, None
    size: dp(24), dp(24)
    theme_font_size: "Custom"
    font_size: sp(24)
    icon_color: self.alias_icon_color


<MKVDialogHeadlineText>
    adaptive_height: True
    halign: "center"
    font_style: "Headline"
    role: "small"
    markup: True
    color: self.alias_color


<MKVDialogSupportingText>
    adaptive_height: True
    halign: "center"
    font_style: "Body"
    role: "medium"
    markup: True
    text_color: self.alias_text_color


<MKVDialogContentContainer>
    adaptive_height: True


<MKVDialogButtonContainer>
    adaptive_height: True


<MKVDialogScrim>
    canvas:
        Color:
            rgba: self.color[:-1] + [self.alpha]
        Rectangle:
            pos: self.pos
            size: self.size
