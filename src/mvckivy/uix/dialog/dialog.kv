<MKVDialog>
    radius: root.radius
    size_hint_min_x: dp(280)
    size_hint_max_x: dp(560)
    pos_hint: {"center_x": .5, "center_y": .5}
    size_hint_y: None
    height: container.height
    theme_shadow_color: "Custom"
    shadow_color: self.theme_cls.transparentColor
    focus_behavior: False
    
    icon_container: icon_container
    headline_container: headline_container
    supporting_text_container: supporting_text_container
    content_container: content_container
    button_container: button_container
    
    MDRelativeLayout:
        size_hint_y: None
        height: container.height

        MDBoxLayout:
            id: container
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height + button_container.height + dp(24)
            spacing: dp(16)
            padding: dp(24)
            y: button_container.height + dp(24)

            MDAnchorLayout:
                id: icon_container
                size_hint_y: None
                anchor_x: "center"
                height:
                    self.children[0].height if self.children else 0

            MDBoxLayout:
                id: headline_container
                size_hint_y: None
                height: self.minimum_height

            MDBoxLayout:
                id: supporting_text_container
                size_hint_y: None
                height: self.minimum_height

            MDBoxLayout:
                id: content_container
                size_hint_y: None
                height: self.minimum_height

        MDBoxLayout:
            id: button_container
            size_hint_y: None
            height: self.minimum_height
            y: content_container.y


<MKVDialogIcon>
    size_hint: None, None
    size: dp(24), dp(24)
    theme_font_size: "Custom"
    font_size: sp(24)
    icon_color:
        self.theme_cls.secondaryColor \
        if self.theme_icon_color == "Primary" else \
        ( \
        self.icon_color \
        if self.icon_color else self.theme_cls.transparentColor \
        )


<MKVDialogHeadlineText>
    adaptive_height: True
    halign: "center"
    font_style: "Headline"
    role: "small"
    markup: True
    color:
        self.theme_cls.onSurfaceColor \
        if self.theme_text_color == "Primary" else ( \
        self.text_color \
        if self.text_color != self.theme_cls.transparentColor else \
        self.theme_cls.onSurfaceColor \
        )


<MKVDialogSupportingText>
    adaptive_height: True
    halign: "center"
    font_style: "Body"
    role: "medium"
    markup: True
    text_color:
        self.theme_cls.onSurfaceVariantColor \
        if self.theme_text_color == "Primary" else ( \
        self.text_color \
        if self.text_color != self.theme_cls.transparentColor else \
        self.theme_cls.onSurfaceVariantColor \
        )


<MKVDialogContentContainer>
    size_hint_y: None
    height: self.minimum_height


<MKVDialogButtonContainer>
    size_hint_y: None
    height: self.minimum_height
    padding: dp(24), 0, dp(24), 0


<MKVDialogScrim>
    canvas:
        Color:
            rgba: self.color[:-1] + [self.alpha]
        Rectangle:
            pos: self.pos
            size: self.size
