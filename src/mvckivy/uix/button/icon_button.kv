<AutoResizeMDIconButton>
    canvas.before:
        Color:
            group: "md-icon-button-bg-color"
            rgba: root.bg_rgba
        SmoothRoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.radius

    radius: root.radius_list
    halign: "center"
    valign: "center"
    size_hint: None, None
    size: dp(40), dp(40)
    text_size: self.size
    line_color: root.line_rgba
    icon_color: root.icon_rgba
    disabled_color: root.disabled_icon_rgba
